				<an:docNumber>Emendamento n. 7.5</an:docNumber>
			</an:p>
			<an:p>
				<an:docProponent as="#tipoSenatore" refersTo="#IDABDNYUAU45V0HXFXHD4N4UXWJKKXIVQDX544NZBWZHJNCAOQ3JXP">ORELLANA</an:docProponent>
