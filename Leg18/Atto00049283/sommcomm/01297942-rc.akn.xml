				<an:heading id="h-d1e442">CONVOCAZIONE DI UN'ULTERIORE SEDUTA</an:heading>
				
            
            
				<an:debateSection id="d-d1e450" name="">
					
               
					<an:heading id="h-d1e450"/>
					
                
               
					<an:speech by="#p29521" as="#d1e244a1327">
						
                  
						<an:from refersTo="#p29521"/>
						
                  
						<an:p>
							Il 
							<an:ref id="d1e466" href="#p29521">
                        PRESIDENTE
                     </an:ref>
							 comunica che è convocata un'ulteriore seduta alle ore 8,30 di domani, mercoledì 19 maggio.
						</an:p>
						
                  
						<an:p>La Commissione prende atto.</an:p>
						

               
					</an:speech>
					
            
				</an:debateSection>
				
            
