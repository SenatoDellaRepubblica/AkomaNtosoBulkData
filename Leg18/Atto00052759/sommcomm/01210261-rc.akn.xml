				<an:debateSection id="d-d1e51" name="as 1708">
					
               
					<an:heading id="h-d1e51">as 1708</an:heading>
					
               
					<an:block name="Atto">
						
                  
						<an:docType>DDL</an:docType>
						
                  
						<an:docNumber>1708</an:docNumber>
						
                  
						<an:docTitle>
                           
                              Disposizioni concernenti l'istituzione delle zone franche montane in Sicilia
                           
                        </an:docTitle>
						
                  
						<an:docProponent/>
						
                  
						<an:docStatus>(Seguito della discussione e rinvio)</an:docStatus>
						
               
					</an:block>
					
                
               
					<an:narrative title="Fisionomia"> Prosegue la discussione sospesa nella seduta del 17 marzo.</an:narrative>
					
               
					<an:speech by="#p32610" as="#d1e94a1327">
						
                  
						<an:from refersTo="#p32610"/>
						
                  
						<an:p>
							Il 
							<an:ref id="d1e94" href="#p32610">
                        PRESIDENTE
                     </an:ref>
							 informa che non è ancora pervenuta alla Commissione la relazione tecnica sul disegno di legge richiesta dalla 5ª Commissione permanente. 
						</an:p>
						
                  
						<an:p>Prende atto la Commissione.</an:p>
						
                  
						<an:p> Il seguito della discussione è quindi rinviato.</an:p>
						
               
					</an:speech>
					
            
				</an:debateSection>
				
            
