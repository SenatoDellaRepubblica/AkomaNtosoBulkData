				<an:narrative title="FineSeduta">
					
               
					<an:recordedTime time="16:55:00"/>
					
               
					<an:i> La seduta termina alle ore 16,55.</an:i>
					
            
				</an:narrative>
				
         
			</an:debateSection>
			
      
