			</an:debateSection>
			
         
			<an:debateSection id="sede-d1e386" name="SCONVOCAZIONE DELLA SEDUTA DI DOMANI">
				
            
				<an:heading id="h-d1e386">SCONVOCAZIONE DELLA SEDUTA DI DOMANI</an:heading>
				
            
            
				<an:debateSection id="d-d1e394" name="">
					
               
					<an:heading id="h-d1e394"/>
					
                
               
					<an:speech by="#p29072" as="#d1e147a1327">
						
                  
						<an:from refersTo="#p29072"/>
						
                  
						<an:p>
							Il 
							<an:ref id="d1e410" href="#p29072">
                        PRESIDENTE
                     </an:ref>
							 avverte che la seduta già convocata alle ore 8,30 di domani, giovedì 25 luglio, non avrà luogo.
						</an:p>
						
                  
						<an:p>Prende atto la Commissione.</an:p>
						

               
					</an:speech>
					
            
				</an:debateSection>
				
            
