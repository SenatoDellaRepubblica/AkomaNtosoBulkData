					<an:block name="Atto">
						
                  
						<an:docType>DDL</an:docType>
						
                  
						<an:docNumber>2317</an:docNumber>
						
                  
						<an:docTitle>
                           
                              Celebrazioni per il centesimo anniversario della morte di Giacomo Matteotti
                           
                        </an:docTitle>
						
                  
						<an:docProponent/>
						
                  
						<an:docStatus>(Rinvio del seguito della discussione)</an:docStatus>
						
               
					</an:block>
					
                
               
					<an:speech by="#p1686" as="#d1e96a1327">
						
                  
						<an:from refersTo="#p1686"/>
						
                  
						<an:p>
							Il 
							<an:ref id="d1e211" href="#p1686">
                        PRESIDENTE
                     </an:ref>
							 comunica che, in attesa dei prescritti pareri, il seguito della discussione deve essere nuovamente rinviato.
						</an:p>
						
                  
						<an:p>Prende atto la Commissione.</an:p>
						
                  
						<an:p> Il seguito della discussione è quindi rinviato.</an:p>
						
               
					</an:speech>
					
            
				</an:debateSection>
				
            
