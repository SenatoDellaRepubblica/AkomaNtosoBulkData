			<an:debateSection id="sede-d1e43" name="INTEGRAZIONE DELL'ORDINE DEL GIORNO">
				
            
				<an:heading id="h-d1e43">INTEGRAZIONE DELL'ORDINE DEL GIORNO</an:heading>
				
            
            
				<an:debateSection id="d-d1e51" name="">
					
               
					<an:heading id="h-d1e51"/>
					
                
               
					<an:speech by="#p32582" as="#senatore">
						
                  
						<an:from refersTo="#p32582"/>
						
                  
						<an:p>
							 Il presidente 
							<an:ref id="d1e67" href="#p32582">
                        BAGNAI
                     </an:ref>
							 comunica che l'ordine del giorno è integrato con l'esame in sede consultiva del disegno di legge n. 909, di conversione del decreto-legge 28 settembre 2018, n. 109.
						</an:p>
						
                  
						<an:p> La Commissione prende atto.</an:p>
						
               
					</an:speech>
					
            
				</an:debateSection>
				
            
				<an:p xmlns:si="http://www.senato.it/static/xml/def/1.0/sindisp.html" xmlns="http://docs.oasis-open.org/legaldocml/ns/akn/3.0/CSD03"/>
				
         
