			</an:debateSection>
			
         
			<an:debateSection id="d1e1015" name="FineSeduta">
				
            
				<an:narrative title="FineSeduta">
					
               
					<an:recordedTime time="13:05:00"/>
					
               
					<an:i> La seduta termina alle ore 13,05.</an:i>
					
            
				</an:narrative>
				
         
			</an:debateSection>
			
      
