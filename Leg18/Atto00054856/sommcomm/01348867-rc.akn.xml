			<an:debateSection id="d1e38" name="InizioSeduta">
				
            
				<an:narrative title="InizioSeduta">
					
               
					<an:recordedTime time="20:00:00"/>
					
               
					<an:i> La seduta inizia alle ore 20.</an:i>
					
            
				</an:narrative>
				
         
