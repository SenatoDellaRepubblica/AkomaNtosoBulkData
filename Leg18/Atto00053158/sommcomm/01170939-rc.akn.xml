			</an:debateSection>
			
         
			<an:debateSection id="d1e750" name="FineSeduta">
				
            
				<an:narrative title="FineSeduta">
					
               
					<an:recordedTime time="00:40:00"/>
					
               
					<an:i>La seduta termina alle ore 00,40.</an:i>
					
            
				</an:narrative>
				
         
