				<an:narrative title="FineSeduta">
					
               
					<an:recordedTime time="14:45:00"/>
					
               
					<an:i> La seduta termina alle ore 14,45.</an:i>
					
            
				</an:narrative>
				
         
			</an:debateSection>
			
      
