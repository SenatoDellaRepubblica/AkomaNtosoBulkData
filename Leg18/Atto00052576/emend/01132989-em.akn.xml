			<an:p>
				<an:docProponent refersTo="#IDDCH35UMKJHX2IXXBDH2IY4XQ0JUVJZOWERKVFRHVI1CYBVMQAVV" as="#tipoSenatore">DI GIROLAMO</an:docProponent>
