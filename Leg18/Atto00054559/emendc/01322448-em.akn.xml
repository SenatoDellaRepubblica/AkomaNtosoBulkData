					</an:tr>
					

					<an:tr>
						

						<an:td>
							

							<an:p>
								<an:span style="font-size:x-small">91-110</an:span>
							</an:p>
							

						</an:td>
						

						<an:td>
							

							<an:p>
								<an:span style="font-size:x-small">Euro 31.200</an:span>
							</an:p>
							

						</an:td>
						

						<an:td>
							

							<an:p>
								<an:span style="font-size:x-small">Euro 6.900</an:span>
