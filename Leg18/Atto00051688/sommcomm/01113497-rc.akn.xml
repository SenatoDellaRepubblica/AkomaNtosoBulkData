			<an:debateSection id="sede-d1e368" name="SCONVOCAZIONE DELLA SEDUTA DI DOMANI">
				
            
				<an:heading id="h-d1e368">SCONVOCAZIONE DELLA SEDUTA DI DOMANI</an:heading>
				
            
            
				<an:debateSection id="d-d1e376" name="">
					
               
					<an:heading id="h-d1e376"/>
					
                
               
					<an:speech by="#p32604" as="#d1e67a1327">
						
                  
						<an:from refersTo="#p32604"/>
						
                  
						<an:p>
							Il 
							<an:ref id="d1e392" href="#p32604">
                        PRESIDENTE
                     </an:ref>
							 comunica che la seduta già convocata domani, giovedì 13 giugno, alle ore 12, non avrà più luogo.
						</an:p>
						
                  
						<an:p>La Commissione prende atto.</an:p>
						

                  
