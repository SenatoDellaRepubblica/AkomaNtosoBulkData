				<an:narrative title="FineSeduta">
					
               
					<an:recordedTime time="10:45:00"/>
					
               
					<an:i>La seduta termina alle ore 10,45.</an:i>
					
            
				</an:narrative>
				
         
			</an:debateSection>
			
      
