					<an:block name="Atto">
						
                  
						<an:docType>DDL</an:docType>
						
                  
						<an:docNumber>2347</an:docNumber>
						
                  
						<an:docTitle>
                           
                              Modifiche al decreto legislativo 21 aprile 2011, n. 67, ai fini dell'introduzione del personale infermieristico e degli operatori socio-sanitari tra le categorie usuranti
                           
                        </an:docTitle>
						
                  
						<an:docProponent/>
						
                  
