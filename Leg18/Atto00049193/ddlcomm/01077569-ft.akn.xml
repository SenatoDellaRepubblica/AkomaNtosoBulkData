					<an:references source="#redattore">
						<an:original href="http://dati.senato.it/osr/Ddl/2018-10-22/5, 199, 234, 253, 392, 412, 563 e 652-A/bis/ita@/main/relazione" id="ro2" showAs="Relazione"/>
						<an:attachmentOf href="http://dati.senato.it/osr/Ddl/2018-10-22/5, 199, 234, 253, 392, 412, 563 e 652-A/bis/ita@/main" id="mainAnx2" showAs="Main"/>
					</an:references>
