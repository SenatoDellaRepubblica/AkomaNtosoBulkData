				<an:heading id="h-d1e43">IN SEDE REDIGENTE</an:heading>
				
             
            
				<an:debateSection id="d-d1e51" name="cefalea">
					
               
					<an:heading id="h-d1e51">cefalea</an:heading>
					
               
					<an:block name="Atto">
						
                  
						<an:docType>DDL</an:docType>
						
                  
						<an:docNumber>1250</an:docNumber>
						
                  
						<an:docTitle>
                           
                              Disposizioni per il riconoscimento della cefalea primaria cronica come malattia sociale
                           
                        </an:docTitle>
						
                  
