			<an:debateSection id="d1e38" name="InizioSeduta">
				
            
				<an:narrative title="InizioSeduta">
					
               
					<an:recordedTime time="16:15:00"/>
					
               
					<an:i>La seduta inizia alle ore 16,15.</an:i>
					
            
				</an:narrative>
				
         
