			</an:debateSection>
			
         
			<an:debateSection id="d1e628" name="FineSeduta">
				
            
				<an:narrative title="FineSeduta">
					
               
					<an:recordedTime time="18:00:00"/>
					
               
					<an:i>La seduta termina alle ore 18.</an:i>
					
            
				</an:narrative>
				
         
