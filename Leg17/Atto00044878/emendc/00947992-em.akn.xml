			<an:p>
				<an:docProponent refersTo="#IDGXLOLN1ULRCPNRY3Z4ND3N042D0JT0KFVRLZ4DGKIYDC43UM04QH" as="#tipoSenatore">MARGIOTTA</an:docProponent>
