			<an:p>
				<an:docProponent refersTo="#IDFII1EPVNP2YZDQOG0NZ4C4J4FCQTDT4MB41BFLP33RIUNNE3MGFB" as="#tipoSenatore">ARRIGONI</an:docProponent>
