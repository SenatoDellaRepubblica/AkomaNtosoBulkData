			<an:p>
				<an:docProponent refersTo="#IDMX1GEV4RN1YWDWZ3SILT0GDLNIDXLZR4WYI1GKIKCIQEMUSQGIHN" as="#tipoSenatore">D'AMBROSIO LETTIERI</an:docProponent>
