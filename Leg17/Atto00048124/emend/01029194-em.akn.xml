				<an:docProponent as="#tipoSenatore" refersTo="#ID0M113U5APZI5EHHD1OMJUMNQKDM22EDBY0MJU1NTPQ1YMF51NNBH">D'AMBROSIO LETTIERI</an:docProponent>
