			<an:article id="d207e50">
				<an:num>Art. 1.</an:num>
				<an:paragraph id="d207e53">
					<an:num>1. </an:num>
					<an:list id="d207e54">
						<an:intro id="d207e56">
							<an:p>Alla legge 13 aprile 1988, n. 117, sono apportate le seguenti modificazioni:</an:p>
						</an:intro>
						<an:point id="d207e58">
							<an:num>
								<an:i>a)</an:i>
								 
							</an:num>
							<an:content id="d207e63">
								<an:p>all'articolo 2, comma 1, le parole: «contro lo Stato» sono soppresse;</an:p>
							</an:content>
						</an:point>
						<an:point id="d207e66">
							<an:num>
								<an:i>b)</an:i>
								 
							</an:num>
							<an:content id="d207e71">
								<an:p>gli articoli 4, 5, 6, 7 e 8 sono abrogati;</an:p>
							</an:content>
						</an:point>
						<an:point id="d207e74">
							<an:num>
								<an:i>c)</an:i>
								 
							</an:num>
							<an:content id="d207e79">
								<an:p>all'articolo 9, comma 1, le parole: «dalla comunicazione di cui al comma 5 dell'articolo 5» sono soppresse;</an:p>
							</an:content>
						</an:point>
						<an:point id="d207e82">
							<an:num>
								<an:i>d)</an:i>
								 
							</an:num>
							<an:list id="d207e83">
								<an:intro id="d207e87">
									<an:p>all'articolo 13:</an:p>
								</an:intro>
								<an:point id="d207e89">
									<an:num>1)</an:num>
									<an:content id="d207e92">
										<an:p> al comma 1, le parole: «costituente reato» sono soppresse;</an:p>
									</an:content>
								</an:point>
								<an:point id="d207e95">
									<an:num>2)</an:num>
									<an:content id="d207e98">
										<an:p> alla rubrica, le parole: «per fatti costituenti reato» sono soppresse.</an:p>
									</an:content>
								</an:point>
							</an:list>
						</an:point>
					</an:list>
				</an:paragraph>
