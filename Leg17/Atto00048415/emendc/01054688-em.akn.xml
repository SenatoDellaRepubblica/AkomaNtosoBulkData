			<an:p>
				<an:docProponent refersTo="#ID0OIRPDAR0GCJMVM1NVRK55GYJFZQOF25YXFHEXEEDAJ0YTTVOVW" as="#tipoSenatore">D'AMBROSIO LETTIERI</an:docProponent>
