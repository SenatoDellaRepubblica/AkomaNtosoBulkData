				, 
				<an:docProponent refersTo="#d307e37" as="#d307e16a1327">RIZZOTTI</an:docProponent>
				, 
				<an:docProponent refersTo="#d307e40" as="#d307e16a1327">SCIASCIA</an:docProponent>
