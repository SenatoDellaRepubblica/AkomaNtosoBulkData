					<an:references source="#redattore">
						<an:original id="ro2" href="http://dati.senato.it/osr/Ddl/2013-10-16/54-A/R/ita@/main/relazione" showAs="Relazione"/>
						<an:attachmentOf id="mainAnx2" href="http://dati.senato.it/osr/Ddl/2013-10-16/54-A/R/ita@/main" showAs="Main"/>
					</an:references>
