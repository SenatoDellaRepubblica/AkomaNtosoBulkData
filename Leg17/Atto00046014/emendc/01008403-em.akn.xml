			<an:p>
				<an:docProponent refersTo="#IDJ32A2V4X5DTJIIRABZ52VTOTSOU1SQOC0TEUVXOXW5ZUZM2IJ1MC" as="#tipoSenatore">MANDELLI</an:docProponent>
