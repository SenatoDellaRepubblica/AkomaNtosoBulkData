				<an:heading id="h-d1e397">SCONVOCAZIONE DI SEDUTA</an:heading>
				
            
            
				<an:debateSection id="d-d1e405" name="">
					
               
					<an:heading id="h-d1e405"/>
					
               
					<an:p/>
					
                
               
					<an:speech by="#p30915" as="#d1e381a1327">
						
                  
						<an:from refersTo="#p30915"/>
						
                  
						<an:p>
							Il 
							<an:ref id="d1e420" href="#p30915">
                        PRESIDENTE
                     </an:ref>
							 avverte che la seduta convocata per le ore 20 di oggi non avrà luogo.
						</an:p>
						
                  
						<an:p>La Commissione prende atto.</an:p>
						

               
					</an:speech>
					
            
