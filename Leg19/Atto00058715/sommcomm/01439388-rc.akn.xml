					<an:block name="Atto">
						
                  
						<an:docType>DDL</an:docType>
						
                  
						<an:docNumber>1044</an:docNumber>
						
                  
						<an:docTitle>Norme in materia di autopsia obbligatoria in caso di morte avvenuta in carcere e introduzione di un presidio di consulenza legale obbligatoria nelle strutture detentive</an:docTitle>
						
                  
						<an:docProponent/>
						
                  
						<an:docStatus>
							
                     
							<an:eol/>
