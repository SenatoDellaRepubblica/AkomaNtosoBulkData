						, 
						<an:docProponent refersTo="#w17aab1b1b6b1b1aaab5" as="#w17aab1b1b6b1b1aaab3Aa">MARTI</an:docProponent>
						 e 
						<an:docProponent refersTo="#w17aab1b1b6b1b1aaab7" as="#w17aab1b1b6b1b1aaab3Aa">PAGANELLA</an:docProponent>
					</an:p>
