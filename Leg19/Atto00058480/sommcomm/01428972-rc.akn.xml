			<an:debateSection id="sede-d1e601" name="POSTICIPAZIONE DELLA SEDUTA POMERIDIANA">
				
            
				<an:heading id="h-d1e601">POSTICIPAZIONE DELLA SEDUTA POMERIDIANA</an:heading>
				
            
            
				<an:debateSection id="d-d1e609" name="">
					
               
					<an:heading id="h-d1e609"/>
					
                
               
					<an:speech by="#p34485" as="#senatore">
						
                  
						<an:from refersTo="#p34485"/>
						
                  
						<an:p>
							 Il presidente 
							<an:ref id="d1e625" href="#p34485">
                        CALANDRINI
                     </an:ref>
							 avverte che l'odierna seduta pomeridiana, già convocata alle ore 14, è posticipata alle ore 14,30.
						</an:p>
						
                  
						<an:p> Le Commissioni riunite prendono atto.</an:p>
						

               
					</an:speech>
					
            
				</an:debateSection>
				
            
