						<an:td>
							<an:p align="justify">2010</an:p>
						</an:td>
					</an:tr>
					<an:tr>
						<an:td>
							<an:p align="justify">Ministero dell'interno </an:p>
						</an:td>
						<an:td>
							<an:p align="justify">1.000.000</an:p>
						</an:td>
